<Ui>
    <Frame name="Login" inherits="FrameTemplate_StaticDialog" hidden="true">
        <Size>
            <AbsDimension x="250" y="200"/>
        </Size>
        <ResizeBounds>
            <Min><AbsDimension x="16" y="80"/></Min>
        </ResizeBounds>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                dofile("interface/login/addon.lua");
                self.on_close = function (self)
                    if (self.on_cancel ~= nil) then
                        self:on_cancel();
                    end
                end;

                self.Title.TitleString:set_text("login");
                self:set_min_width(225);

                self:show();
                self:raise();
            </OnLoad>
            <OnShow>
            </OnShow>
        </Scripts>
        <Frames>
            <EditBox name="$parentUsername" inherits="EditBoxTemplate_EditBox">
                <Size>
                    <AbsDimension x="100" y="20"/>
                </Size> 
                <Anchors> 
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="16" y="20"/> 
                        </Offset> 
                    </Anchor> 
                </Anchors>
                <Scripts>
                    <OnShow> 
                        self:password_mode(True);
                    </OnShow>
                </Scripts>

            </EditBox>
            
            <EditBox name="$parentPassword" inherits="EditBoxTemplate_EditBox"> 
                <Size> 
                    <AbsDimension x="100" y="20"/>
                </Size>
                <Anchors> 
                    <Anchor point="RIGHT"> 
                        <Offset> 
                            <AbsDimension x="-16" y="20" /> 
                        </Offset> 
                    </Anchor> 
                </Anchors> 
            </EditBox>
            
            <Button name="$parentLoginButton" inherits="ButtonTemplate_Button"> 
                <Size> 
                    <AbsDimension x="100" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM"> 
                        <Offset> 
                            <AbsDimension x="-16" y="-20" /> 
                        </Offset> 
                    </Anchor> 
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self:set_text("Login");
                    </OnLoad>
                    <OnClick>
                    </OnClick>
                </Scripts>
            </Button>

        </Frames>
    </Frame>
</Ui>
