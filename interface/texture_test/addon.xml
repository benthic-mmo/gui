<Ui>
    <Frame name="TextureTestFrame">
        <Anchors>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT"/>
        </Anchors>
        <Layers>
            <Layer>
                <Texture name="$parentTexture1" file="|texture.png">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT"/>
                    </Anchors>
                </Texture>
                <Texture name="$parentTexture2">
                    <Size><AbsDimension x="50" y="50"/></Size>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativeTo="$parentTexture1" relativePoint="TOPLEFT"/>
                    </Anchors>
                    <Gradient orientation="HORIZONTAL">
                        <MinColor r="0.7" g="1"/>
                        <MaxColor r="1" g="0.7"/>
                    </Gradient>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
</Ui>
